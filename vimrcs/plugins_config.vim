"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" => vim-signature with rnu, nu
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
function! SidebarToggle()
    if(&nu == 1)
        set nonu
        set nornu
        set scl=no
    else
        set nu
        set rnu
        set scl=auto
    end
endfunction

nnoremap <leader>s :call SidebarToggle()<CR>
